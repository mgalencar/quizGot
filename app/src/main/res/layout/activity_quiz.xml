<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="159dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView

            android:id="@+id/img_quiz"
            android:layout_width="137dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo_"

            />

        <TextView
            android:id="@+id/txt_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="persongam ou casa"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_tempo"
            android:text="Ex.: 30"
            android:textSize="30dp"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        >

        <Button
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btnradius"
            android:onClick="resposta1"
            android:text="teste 1"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:id="@+id/btn1"
            />

        <Button
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btnradius"
            android:onClick="resposta2"
            android:text="teste 1"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:id="@+id/btn2"
            />

        <Button
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btnradius"
            android:onClick="resposta3"
            android:text="teste 1"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:id="@+id/btn3"
            />

        <Button
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btnradius"
            android:onClick="resposta4"
            android:text="teste 1"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:id="@+id/btn4"
            />


    </LinearLayout>




</LinearLayout>